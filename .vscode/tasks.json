{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Format PHP with PHPCBF",
      "type": "shell",
      "command": "${workspaceFolder}/vendor/bin/phpcbf",
      "args": [
        "--standard=${workspaceFolder}/phpcs.xml.dist",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    }
  ]
}

